{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".", 
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@scripts/*": ["scripts/*"],
      "@data/*": ["data/*"],
      "@hooks/*": ["hooks/*"],
    }
  },
  "include": [
    "modules/**/*",
    "config/**/*",
    "utils/**/*",
    "scripts/**/*",
    "data/**/*",
    "hooks/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}